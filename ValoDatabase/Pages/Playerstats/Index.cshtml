                @Html.DisplayNameFor(model => model.PlayerStat[0].Deaths)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerStat[0].Assists)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayerStat[0].Headshots)
